{
    "name": "@friendshipbubble/discord-bot",
    "version": "0.0.1",
    "description": "The official Friendship Bubble Discord bot.",
    "main": "./dist/index.js",
    "repository": "https://github.com/friendshipbubble/discord-bot",
    "author": "Jonas Claes",
    "license": "GPL-3.0-or-later",
    "scripts": {
        "dev": "nodemon",
        "build": "rimraf ./dist && tsc",
        "test": "jest",
        "docker:build": "docker build . -t registry.jonasclaes.be/friendshipbubble/discord-bot:latest && docker tag registry.jonasclaes.be/friendshipbubble/discord-bot:latest registry.jonasclaes.be/friendshipbubble/discord-bot:$(git rev-parse --short HEAD)",
        "docker:push": "docker push registry.jonasclaes.be/friendshipbubble/discord-bot:latest && docker push registry.jonasclaes.be/friendshipbubble/discord-bot:$(git rev-parse --short HEAD)",
        "migration:create": "mikro-orm migration:create",
        "migration:up": "mikro-orm migration:up"
    },
    "dependencies": {
        "@discordjs/builders": "^0.13.0",
        "@discordjs/rest": "^0.4.1",
        "@mikro-orm/cli": "^5.1.3",
        "@mikro-orm/core": "^5.1.3",
        "@mikro-orm/migrations": "^5.1.3",
        "@mikro-orm/mysql": "^5.1.3",
        "@mikro-orm/reflection": "^5.1.3",
        "body-parser": "^1.19.1",
        "cors": "^2.8.5",
        "cron": "^1.8.2",
        "discord-api-types": "^0.32.1",
        "discord.js": "^13.7.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.2",
        "express-oauth2-jwt-bearer": "^1.1.0",
        "handlebars": "^4.7.7",
        "rimraf": "^3.0.2",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/cron": "^1.7.3",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.5.1",
        "@types/node": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.25.3",
        "jest": "^28.1.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "ts-jest": "^28.0.2",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.6.4"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/common/mikro-orm.config.ts",
            "./dist/src/common/mikro-orm.config.js"
        ]
    }
}
